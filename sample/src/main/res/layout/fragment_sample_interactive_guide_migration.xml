<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tutorialContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/interactive_guide_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="126dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/landingImageView"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:visibility="invisible"
                android:scaleType="centerCrop"
                android:src="@drawable/interactive_guide_landing" />

            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="16dp">
                    <ProgressBar
                        android:id="@+id/tutorialProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/interactive_guide_circular_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="25" />
                    <TextView
                        android:id="@+id/tutorialStepNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="1"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tutorialSubTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/interactive_guide_gray"
                        android:textSize="10sp"
                        android:text="1 OF 5"/>
                    <TextView
                        android:id="@+id/tutorialDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="위로 밀면?\n재미있는 컨텐츠가 한가득!"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/closeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:padding="7dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:text="닫기"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/nextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:text="다음"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</FrameLayout>